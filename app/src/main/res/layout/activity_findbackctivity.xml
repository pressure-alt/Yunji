<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical"
    android:padding="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:background="@drawable/username_style4">

        <EditText
            android:id="@+id/fb_telephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="请输入手机号"
            android:textSize="18dp"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="10dp"
            android:maxLines="1"
            android:paddingLeft="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/fb_verified"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/ic_local_letter"
                android:hint="短信验证码" />

            <Button
                android:id="@+id/fb_sendver"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:layout_marginTop="12dp"
                android:text="发送验证码"
                android:layout_marginBottom="10dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/newpasswd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_lock_black"
            android:hint="填写新密码" />
        <EditText
            android:id="@+id/newpasswdconfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:layout_marginBottom="35dp"
            android:drawableLeft="@drawable/ic_lock_black"
            android:hint="确认新密码"></EditText>
    </LinearLayout>

    <Button
        android:id="@+id/fb_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认"
        android:layout_marginTop="50dp"
        android:textSize="18sp"
        android:background="@drawable/username_style2"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#8E8E8E "
        android:layout_marginTop="15dp"
        android:text="本操作将会重置您的登录密码，请牢记您的新密码"
        android:textSize="12dp" />
</LinearLayout>